<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <EditText
      android:id="@+id/text_dialog_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintHorizontal_weight="5"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/spinner_dialog_icon"
      android:hint="@string/map_dialog_name"
      android:inputType="text"
      android:maxLines="1"
      android:scrollHorizontally="true"
      />
  <Spinner
      android:id="@+id/spinner_dialog_icon"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintHorizontal_weight="2"
      app:layout_constraintDimensionRatio="3:1"
      app:layout_constraintTop_toTopOf="@id/text_dialog_name"
      app:layout_constraintBottom_toBottomOf="@id/text_dialog_name"
      app:layout_constraintLeft_toRightOf="@+id/text_dialog_name"
      app:layout_constraintRight_toRightOf="parent"
      android:dropDownWidth="match_parent"
      />
</android.support.constraint.ConstraintLayout>